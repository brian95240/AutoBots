# AutoBots Environment Configuration
# Copy this file to .env and update with your actual credentials

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech:5432/autobots?sslmode=require
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=autobots
DB_USER=your-username
DB_PASSWORD=your-password

# Spider.cloud API Configuration
SPIDER_API_KEY=your-spider-premium-api-key
SPIDER_BASE_URL=https://api.spider.cloud/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Docker Hub Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=Ldmi777
DOCKER_PASSWORD=.7c0N7Ai71nR$7#

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-project-id

# GitHub Configuration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=brian95240/AutoBots

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# Performance Settings
MAX_WORKERS=8
POOL_SIZE=20
MAX_CONNECTIONS=100
CACHE_TTL=3600

# GDPR Compliance
DATA_RETENTION_DAYS=30
AUTO_PURGE_ENABLED=true
GDPR_CONTACT_EMAIL=privacy@autobots.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,txt

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@autobots.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# Feature Flags
ENABLE_OCR_FALLBACK=true
ENABLE_THREAT_DETECTION=true
ENABLE_GDPR_AUTO_PURGE=true
ENABLE_MONITORING=true

# Credit Management
SPIDER_CREDIT_LIMIT=95
CREDIT_WARNING_THRESHOLD=80
CREDIT_ALERT_EMAIL=admin@autobots.com

